{
    "name": "project-template",
    "version": "1.0.0",
    "description": "Full setup with webpack, foundation-sites, bootstrap, sass and maybe typescript",
    "main": "index.js",
    "scripts": {
        "watch": "webpack serve --config webpack.config.js --mode development",
        "build": "webpack --config webpack.config.js --env.mode development",
        "build:prod": "webpack --config webpack.config.js --env.mode production",
        "format": "prettier --write src/**/*.ts",
        "lint": "tsc --noEmit && eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "clean": "rm -rf node_modules/ && rm -rf package-lock.json",
        "install:clean": "npm run clean && npm install",
        "test": "jest"
    },
    "keywords": [
        "template"
    ],
    "author": "Joey",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "css-loader": "^6.7.3",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "file-loader": "^6.2.0",
        "html-loader": "^4.2.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.7.0",
        "mini-css-extract-plugin": "^2.7.5",
        "prettier": "^2.8.5",
        "sass": "^1.59.3",
        "sass-loader": "^13.2.1",
        "style-loader": "^3.3.2",
        "ts-jest": "^29.2.3",
        "typescript": "^5.5.4",
        "webpack": "^5.76.2",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.13.1"
    },
    "dependencies": {
        "rxjs": "^7.8.1",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1"
    }
}
